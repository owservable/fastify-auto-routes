{
	"name": "@owservable/fastify-auto-routes",
	"version": "0.2.7",
	"description": "fastify auto routes",
	"engines": {
		"node": ">=16"
	},
	"main": "./lib/fastify.auto.routes.js",
	"types": "./lib/fastify.auto.routes.d.ts",
	"author": "Predrag Stojadinovic <predrag@stojadinovic.net>",
	"license": "Unlicense",
	"files": [
		"lib/**/*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/owservable/fastify-auto-routes.git"
	},
	"scripts": {
		"all": "pnpm i & tsc & pnpm clean & pnpm build & pnpm test & pnpm docs",
		"build": "del /S /Q lib\\* && tsc",
		"build:watch": "tsc --watch",
		"lint": "tslint -p tsconfig.json",
		"clean": "tslint --config tslint-imports.json --fix --project .",
		"format": "prettier --write \"src/**/*.ts\"",
		"docs": "typedoc --readme none --out docs ./src/fastify.auto.routes.ts",
		"test": "nyc --all --reporter=lcov --reporter=html mocha -r ts-node/register test/**/*.spec.ts --code-coverage",
		"coveralls": "cat ./coverage/lcov.info | node node_modules/.bin/coveralls",
		"sonar": "sonarjs -e .sonarlint/**,node_modules/**,coverage/**,.nyc_output/**",
		"test_qube": "nyc --reporter=lcov mocha -R @danmasta/mocha-sonar -r ts-node/register test/**/*.spec.ts",
		"qube": "pnpm test_qube & docker run --rm -e SONAR_HOST_URL=\"https://sonarqube.systools.nvidia.com\" -e SONAR_LOGIN=\"3db2cc475490ea6f28ac7aac5030f3b12530dcf8\" -v \"C:/git/github/owservable/fastify.auto.routes:/usr/src\" sonarsource/sonar-scanner-cli",
		"up": "pnpm up -i",
		"latest": "pnpm up -i -L",
		"l": "pnpm i & pnpm latest",
		"preinstall": "npx only-allow pnpm"
	},
	"dependencies": {
		"@owservable/actions": "^0.1.1",
		"@owservable/folders": "^0.1.1",
		"@types/lodash": "^4.14.195",
		"@types/node": "^20.2.5",
		"fastify": "^4.17.0",
		"lodash": "^4.17.20"
	},
	"devDependencies": {
		"@danmasta/mocha-sonar": "^1.0.1",
		"@faker-js/faker": "^8.0.2",
		"@types/chai": "^4.3.5",
		"@types/mocha": "^10.0.1",
		"@types/rewire": "^2.5.28",
		"chai": "^4.3.7",
		"coveralls": "^3.0.9",
		"mocha": "^10.2.0",
		"nyc": "^15.1.0",
		"prettier": "^2.8.8",
		"rewire": "^6.0.0",
		"sonarjs": "^1.0.0",
		"source-map-support": "^0.5.16",
		"ts-node": "^10.9.1",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"tslint-etc": "^1.13.7",
		"tslint-no-unused-expression-chai": "^0.1.4",
		"typedoc": "^0.24.8",
		"typescript": "^5.1.3"
	}
}
